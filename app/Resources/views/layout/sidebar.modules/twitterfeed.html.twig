<ul class="timeline">
    {% for tweet in tweets %}
        <li>
            <div class="timeline-panel">
                <div class="timeline-heading">
                    <h4 class="timeline-title">{{ tweet.user.name }}</h4>

                    <p>
                        <small class="text-muted"><i class="glyphicon glyphicon-time"></i> {{ tweet.created_at|time_diff }}</small>
                    </p>
                </div>
                <div class="timeline-body">
                    <p>{{ tweet.text }}</p>
                </div>
            </div>
        </li>
    {% endfor %}
</ul>